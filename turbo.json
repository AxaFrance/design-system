{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": [
                "dist/**",
                "storybook-static/**"
            ],
            "dependsOn": [
                "^build",
                "^lint"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types",
                "^build"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "dev:client": {
            "persistent": true,
            "cache": false
        },
        "dev:prospect": {
            "persistent": true,
            "cache": false
        },
        "dev:distributeur": {
            "persistent": true,
            "cache": false
        },
        "lint": {
            "dependsOn": [
                "^check-types"
            ]
        }
    }
}