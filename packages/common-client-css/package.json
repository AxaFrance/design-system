{
  "name": "@axa-fr/design-system-common-client-css",
  "version": "0.1.0",
  "description": "Expose common component throught a npm workspace",
  "exports": {
    "./*": {
      "development": "./src/*",
      "default": "./dist/*"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "postcss \"src/**/*.{scss,css}\" --base src --dir dist --ext css --verbose --watch --env development --config ../../config/postcss.config.js",
    "build": "postcss \"src/**/*.{scss,css}\" --base src --dir dist --ext css --verbose --env production --config ../../config/postcss.config.js",
    "postbuild": "copyfiles --up 1 \"src/**/*.ts\" ./dist/",
    "stylelint": "stylelint \"src/**/*.{scss,css}\"",
    "stylelint:fix": "stylelint \"src/**/*.{scss,css}\" --fix",
    "prettier": "prettier \"src/**/*.!(js|jsx|ts|tsx|scss|css)\" --check --ignore-unknown",
    "prettier:fix": "prettier \"src/**/*.!(js|jsx|ts|tsx|scss|css)\" --write --ignore-unknown"
  },
  "dependencies": {
    "@axa-fr/design-system-common-client-react": "*"
  },
  "peerDependencies": {
    "@material-symbols/svg-400": ">= 0.19.0"
  },
  "peerDependenciesMeta": {
    "@material-symbols/svg-400": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AxaFrance/design-system.git"
  },
  "author": {
    "name": "AxaFrance"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AxaFrance/design-system/issues"
  },
  "homepage": "https://github.com/AxaFrance/design-system#readme",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.(ts|tsx)": "tsc-files --noEmit",
    "*.(scss|css)": "stylelint --fix",
    "*.mdx": "prettier --write"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
