{
  "name": "@axa-fr/design-system",
  "version": "0.1.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AxaFrance/design-system.git"
  },
  "scripts": {
    "start": "concurrently \"npm run start:*\"",
    "start:slash": "concurrently \"npm run start -w=slash/css\" \"npm run start:storybook -w=slash/css\" \"npm run start:storybook -w=slash/react\" -c auto -n css,css:storybook,react:storybook",
    "build": "npm run build:slash",
    "build:slash": "npm run build --workspace=slash && npm run build:storybook --workspace=slash",
    "lint": "npm run lint:slash",
    "lint:slash": "concurrently \"npm:eslint --workspace=slash\" \"npm:stylelint -w=slash/css\" \"npm:prettier --workspace=slash/css\" \"npm:prettier --workspace=slash/react\" \"npm:tsc --workspace=slash\" -c auto -n slash-eslint,slash-stylelint,slash-css-prettier,slash-react-prettier,slash-tsc",
    "package:check": "npx --yes package-lock-utd@1.1.3",
    "prepare": "husky"
  },
  "author": "AxaFrance",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AxaFrance/design-system/issues"
  },
  "homepage": "https://github.com/AxaFrance/design-system#readme",
  "workspaces": [
    "slash/css",
    "slash/react",
    "samples/vite"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.1.0",
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "lint-staged": {
    "{package,package-lock}.json": "npm run package:check"
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.5"
  }
}