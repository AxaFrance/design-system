{
  "name": "@axa-fr/design-system",
  "version": "0.1.0",
  "description": "",
  "packageManager": "npm@11.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AxaFrance/design-system.git"
  },
  "scripts": {
    "dev": "turbo dev --filter=./apps/*",
    "dev:look-and-feel": "turbo dev --filter=@axa-fr/look-and-feel-stories-css --filter=@axa-fr/look-and-feel-stories",
    "dev:apollo": "turbo dev --filter=@axa-fr/apollo-stories",
    "dev:slash": "turbo dev --filter=@axa-fr/slash-stories-css --filter=@axa-fr/slash-stories",
    "build": "turbo build --filter=!./samples/vite",
    "build:slash": "turbo build --filter=./apps/slash-stories --filter=./apps/slash-stories-css",
    "build:look-and-feel": "turbo build --filter=./apps/look-and-feel-stories --filter=./apps/look-and-feel-stories-css",
    "build:apollo": "turbo build --filter=./apps/apollo-stories",
    "lint": "turbo lint",
    "lint:slash": "turbo lint --filter=./slash/*",
    "lint:look-and-feel": "turbo lint --filter=./client/look-and-feel/*",
    "lint:apollo": "turbo lint --filter=./client/apollo/*",
    "package:check": "npx --yes package-lock-utd@1.1.3",
    "prepare": "husky",
    "test": "vitest --coverage"
  },
  "author": "AxaFrance",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AxaFrance/design-system/issues"
  },
  "homepage": "https://github.com/AxaFrance/design-system#readme",
  "workspaces": [
    "slash/css",
    "slash/react",
    "client/apollo/css",
    "client/look-and-feel/css",
    "client/apollo/react",
    "client/look-and-feel/react",
    "samples/vite",
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@material-symbols/svg-400": "^0.28.1",
    "@types/node": "^22.10.6",
    "commander": "^13.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "tsc-files": "^1.1.4",
    "turbo": "^2.4.0"
  },
  "lint-staged": {
    "{package,package-lock}.json": "npm run package:check"
  },
  "volta": {
    "node": "22.13.0",
    "npm": "11.0.0"
  }
}
