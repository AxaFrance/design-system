{
  "name": "@axa-fr/design-system-apollo-css",
  "version": "0.1.0",
  "description": "",
  "sass": "dist/apollo.scss",
  "style": "dist/apollo.css",
  "exports": {
    "./*": {
      "development": "./files/assets/*",
      "default": "./dist/assets/*"
    },
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist & npm run build:token:apollo & npm run build:token:look-and-feel & npm run copyfiles",
    "build:token:apollo": "postcss  \"src/common/tokens.raw.css\" -o  \"src/common/tokens.css\" --verbose --env tokens",
    "build:token:look-and-feel": "postcss  \"src/common/tokensLF.raw.css\" -o  \"src/common/tokensLF.css\" --verbose --env tokens",
    "build": "postcss \"src/**/*{Apollo,LF,Grid,DebugGrid,All}.css\" \"src/common/{tokens,tokensLF,reboot}.css\"  \"src/*.css\" --base src --dir dist --verbose --env production",
    "dev": "npm run build -- --watch",
    "copyfiles": "copyfiles --up 1 \"src/**/*.scss\" files/**/*.svg dist",
    "stylelint": "stylelint \"src/**/*.{scss,css}\"",
    "stylelint:fix": "stylelint \"src/**/*.{scss,css}\" --fix"
  },
  "peerDependencies": {
    "@material-symbols/svg-400": ">= 0.19.0"
  },
  "peerDependenciesMeta": {
    "@material-symbols/svg-400": {
      "optional": true
    }
  },
  "devDependencies": {
    "@axa-fr/postcss-config-design-system": "*",
    "@axa-fr/prettier-config-design-system": "*",
    "@axa-fr/stylelint-config-design-system": "*",
    "@csstools/postcss-design-tokens": "^4.0.5",
    "@csstools/postcss-global-data": "^3.1.0",
    "copyfiles": "^2.4.1",
    "postcss-import": "^16.1.1",
    "rimraf": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AxaFrance/design-system.git"
  },
  "author": {
    "name": "AxaFrance"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AxaFrance/design-system/issues"
  },
  "homepage": "https://github.com/AxaFrance/design-system#readme",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.(scss|css)": "stylelint --fix"
  },
  "prettier": "@axa-fr/prettier-config-design-system",
  "stylelint": {
    "extends": "@axa-fr/stylelint-config-design-system"
  },
  "volta": {
    "extends": "../../../package.json"
  }
}
