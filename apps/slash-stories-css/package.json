{
  "name": "@axa-fr/slash-stories-css",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "storybook dev -p 6120",
    "build": "storybook build",
    "check-types": "tsc --noEmit",
    "eslint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "eslint:fix": "eslint src --ext js,jsx,ts,tsx --fix",
    "prettier": "prettier \"src/**/*.!(js|jsx|ts|tsx|svg)\" --check",
    "prettier:fix": "prettier \"src/**/*.!(js|jsx|ts|tsx|svg)\" --write",
    "chromatic": "npx chromatic"
  },
  "dependencies": {
    "@axa-fr/design-system-slash-css": "*"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.5",
    "@storybook/addon-a11y": "^8.6.3",
    "@storybook/addon-essentials": "^8.6.3",
    "@storybook/addon-interactions": "^8.6.3",
    "@storybook/blocks": "^8.6.3",
    "@storybook/html": "^8.6.3",
    "@storybook/html-vite": "^8.6.3",
    "@storybook/test": "^8.6.3",
    "chromatic": "^11.26.1",
    "sass": "^1.84.0",
    "storybook": "^8.6.3",
    "typescript": "~5.7.2",
    "vite": "^6.1.0"
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": "eslint --fix",
    "*.(ts|tsx)": "tsc-files --noEmit",
    "*.mdx": "prettier --write"
  }
}
